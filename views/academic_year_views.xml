<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="academic_year_tree_view" model="ir.ui.view">
        <field name="name">school.academic.year.tree</field>
        <field name="model">school.academic.year</field>
        <field name="arch" type="xml">
            <tree default_order="name desc">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
    <record id="academic_year_form_view" model="ir.ui.view">
        <field name="name">school.academic.year.form</field>
        <field name="model">school.academic.year</field>
        <field name="arch" type="xml">
            <form string="Năm học">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="VD: 2025-2026" required="1"/>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Các học kỳ">
                            <field name="semester_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Học kỳ">
                                    <group>
                                        <field name="name" required="1"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="academic_year_action" model="ir.actions.act_window">
        <field name="name">Năm học</field>
        <field name="res_model">school.academic.year</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>